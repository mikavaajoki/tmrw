{% extends "layout.twig" %}

{% block content %}	


{% for issue in issues|slice(0,1) %}
	{% include 'partials/latest-issue.twig' %}
{% endfor %}

{% include 'partials/back-archive.twig' %}

{% include 'partials/digital-features.twig' %}


{% endblock %}


{% block scripts %}
	{{ parent() }}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>
	  <script type="text/javascript">
    $(document).ready(function(){
      $('.back-archive-slider-container .grid-items').slick({
				slidesToShow: 3,
				slidesToScroll: 1,				 
				responsive: [
			    {
			      breakpoint: 1024,
			      settings: {
			        slidesToShow: 3,
			        slidesToScroll: 3,
			        infinite: true,
			        dots: true
			      }
			    },
			    {
			      breakpoint: 767,
			      settings: {
			        slidesToShow: 2,
			        slidesToScroll: 2,
			        infinite: true,
			        dots: true
			      }
			    },
			    {
			      breakpoint: 480,
			      settings: {
			        slidesToShow: 1,
			        slidesToScroll: 1
			      }
			    }
			  ]
      });
    });
  </script>
{% endblock %}
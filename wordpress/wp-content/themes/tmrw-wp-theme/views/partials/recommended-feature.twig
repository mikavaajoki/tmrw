{% set post = TimberPost(options.recommended_feature) %}
{% set writer = post.get_field('article_details_author') %}
<section id="recommended-feature">
		<div class="container">
			<div class="sub-heading">
				<h4>Recommended Feature</h4>
			</div>
			{% for image in post.get_field('article_details_opening_image') %}
					<div class="featured-image" style="background-image: url('{{image.url}}');"></div>
			{% endfor %}
			<div class="heading">
				<h1>{{post.title}}<br class="tablet-hide"> <span class="poppins">{{post.get_field('article_details_subtitle')}}</span></h1>
			</div>
			<div class="author-date-category">
				<h4>{{writer.display_name}} <span class="worksans mobile-hide">/</span> <br class="mobile-display">{{post.post_date|date("M j, Y")}} <span class="worksans">/</span> {{post.category}}</h4>
			</div>
			<div class="stand-first">
				<h2>
				{{post.article_details_standfirst}}
				</h2>
			</div>
			{% for block in post.get_field('blocks')|slice(0,1) %}
						{% if block.acf_fc_layout == 'paragraph' %}
							{{block.paragraph}}
						{% elseif block.acf_fc_layout == 'heading' %}
							<h3>{{block.heading}}</h3>	
						{% elseif block.acf_fc_layout == 'embed' %}
							<div class="embed-container">{{block.embed}}</div>	
						{% elseif block.acf_fc_layout == 'quote' %}
							<q>{{block.quote}}</q>	
						{% elseif block.acf_fc_layout == 'image' %}
							<div class="image-inline-container image-inline-container-{{block.width_}}">
								<img class="inline-image" src="{{block.image.url}}" />
								<p class="image-inline-caption image-inline-caption-{{block.width_}}">{{block.image_caption}}</p>	
							</div>
						{% endif %}
					{% endfor %}
			<div class="gradient"></div>
			<div class="call-to-action">
				<a href="feature.html"><button>Read the Full Feature</button></a>
			</div>
		</div>
	</section>
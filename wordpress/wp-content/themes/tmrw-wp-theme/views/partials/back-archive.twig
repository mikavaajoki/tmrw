<section id="back-archive">
	<div class="container">
		<div class="heading">
			<h2>Back <span class="poppins">Catalogue</span></h2>
		</div>
		<div class="call-to-action">
				<a href="{{ site.url }}/shop">
				<button formaction="{{ site.url }}/shop">Shop All Volumes</button>
				</a>
		</div>
		<div class="carousel">
			<div id="gradient-container">
				<div id="gradient-left"></div>
				<div id="gradient-right"></div>
			</div>
			<div id="slide-container" class="slide-container">				
			{% for issue in issues %}
				<div class="slide">
					<img class="cover-image" src="{{Image(issue.cover_image).src}}">
					<h3>Volume N<sup>o</sup> {{issue.volume_number}} <br><span class="poppins">{{issue.title}}</span></h3>
					<a href="{{ site.url }}/shop"><h4>See Inside<img class="chevron" src="{{theme.link}}/img/chevron-right-white.png"></h4></a>
				</div>
				
			{% endfor %}
			</div>
		</div>
	</div>
</section>